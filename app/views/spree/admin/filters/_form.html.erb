<div data-hook="admin_image_form_fields" class="row">
  <div data-hook="alt_text" class="col-md-6">
    <div class="form-group">
      <%= f.label :name, Spree.t(:name) %>
      <%= f.select :name, options_for_select(Spree::Filter::NAMES), prompt: '--Select--', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :display_name, Spree.t(:display_name) %>
      <%= f.text_field :display_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :type, Spree.t(:type) %>
      <%= f.select :type, options_for_select(Spree::Filter::TYPES), prompt: '--Select--', class: 'form-control' %>
    </div>
  </div>
</div>
